<Window x:Class="POS_System.SplitBillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System"
        mc:Ignorable="d"
        Title="SplitBillDialog" Height="300" Width="400" WindowStartupLocation="CenterOwner" Background="#212121">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="171*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Please enter how many bill:" Foreground="Orange" FontSize="25" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,39,0,0" Name="NumberOfPeopleTextBlock" Height="26" Width="352" />
        <TextBox x:Name="NumberOfPeopleTextBox" HorizontalAlignment="Center" FontSize="25" FontFamily="Verdana" TextAlignment="Center"  VerticalAlignment="Center" Width="170" Height="39" Margin="0,69,0,0"  />
        <Button Content="Save" Background="Orange" BorderBrush="#FF4C4B56" FontSize="25" FontFamily="Verdana" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Width="170" Height="42" Margin="0,113,0,0" Click="SaveButton_Click"  Name="PrintAll_Button" Grid.RowSpan="2" />


    </Grid>
</Window>
