<Window x:Class="POS_System.AddItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_System"
        mc:Ignorable="d"
        Title="AddCategoryDialog" Height="450" Width="800">
    <Grid>
        
        
        <StackPanel Margin="20">
            <TextBlock x:Name="ItemIdTextBlock" Text="Item ID:"/>
            <TextBox x:Name="IdTextBox"/>
            <TextBlock x:Name="ItemNameTextBlock" Text="Item Name:"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock x:Name="ItemPriceTextBlock" Text="Item Price:"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock x:Name="DescriptionTextBlock" Text="Item Description:"/>
            <TextBox x:Name="DescriptionTextBox"/>
            <TextBlock x:Name="CategoryTextBlock" Text="Item Category:"/>
            <ComboBox  x:Name="CategoryComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button Content="Save" Click="SaveButton_Click"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
